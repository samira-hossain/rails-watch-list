  <div class="container">
    <div class="banner" style="background-image: url(<%= image_path('background.jpg') %>); background-size: cover;">
     <div class="cover justify-content-center" style="padding: 100px 10px;">
        <div class="text-center text-white">
          <h1>Movie lists</h1>
        </div>
      </div>
    </div>
  </div>
</body>


<div class="container">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
          <div class="card-category text-white" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,1,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('background.jpg') %>)">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
